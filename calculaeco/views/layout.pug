      script.
        if($(location).attr('pathname') == "/calculadora"){
          if($(document).width() < 768){
            $('body')
              .css('background-image', 'none')
              .css('background-color', '#ff701a')
              .css('height', '150%')
              }
        }
        if($(document).width() >= 980){
          $('.placeholder').css('display', 'initial');
          if($(document).width() >= 1300){
          $('.instrucoes').css('display', 'initial');
          }
        }

        function hover(element) {
          element.setAttribute('src', '/images/'+element.id+'_laranja.png');
        }
        function unhover(element) {
          element.setAttribute('src', '/images/'+element.id+'.png');
        }





